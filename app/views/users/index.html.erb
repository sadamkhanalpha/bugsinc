<h1>All Users</h1>
<% @users.each do |user| %>
 <section style="background-color: grey; width: 500px; display: flex; flex-direction: column; justify-content: center; align-items: center; margin:10px;">
 	<h2><%= link_to user.name, user_path(user)%></h2>
 	<h3>Position: <%= user.usertype%></h3>
 	<button style="width:80px;height:40px;font-size: 20px;"><%= link_to 'Edit', edit_user_path(user) %></button>
 	<button style="width:160px;height:40px;font-size: 20px;"><%= link_to 'Delete User', delete_user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %></button>
 </section>
<% end %>